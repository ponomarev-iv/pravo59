extends inc/base

block title
    title= 'Юридическом центре Право и Cемья'

block content

    section(class="content-wrap")
        .container.container-flex
            .content__col
                h1.section-title.section-title_no-mrg Юридические услуги по&nbsp;Семейным делам
                .accent-block
                    p.accent-block__txt Опыт ежедневной работы более 12 лет

                section.service
                    .service__row
                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/rastirzheniye-braka.jpg")
                            .card__body
                                h2.card__title Расторжение брака
                                ul.list
                                    li если супруг(а) уклоняется от&nbsp;расторжения брака
                                    li если есть несовершеннолетние дети
                                    li если супруг(а) живет в&nbsp;другом городе
                            .card__footer
                                span.card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/razdel.jpg")
                            .card__body
                                h2.card__title Раздел имущества
                                ul.list
                                    li раздел совместного имущества
                                    li раздел долгов и кредитов
                                    li раздел ипотеки
                                    li выдел доли в квартире
                            .card__footer
                                .card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/aliment.jpg")
                            .card__body
                                h2.card__title Взыскание алиментов
                                ul.list
                                    li в&nbsp;долях от&nbsp;заработной платы
                                    li в&nbsp;твердой денежной сумме
                                    li если отец (мать) не&nbsp;работает
                                    li если нет дохода у&nbsp;родителя
                                    li взыскание дополнителных расходов на&nbsp;содержание ребенка
                            .card__footer
                                .card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/child-quest.jpg")
                            .card__body
                                h2.card__title Споры о детях
                                ul.list
                                    li определение порядка общения с&nbsp;детьми
                                    li определение места жительства ребенка
                                    li общение с&nbsp;ребенком дедушки, бабушки и&nbsp;других родственников
                            .card__footer
                                .card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/parent-pravo.jpg")
                            .card__body
                                h2.card__title Лишение родительских прав
                                ul.list
                                    li если родитель не&nbsp;платит алименты
                                    li злоупотребляет своими правами
                                    li не&nbsp;воспитывает ребенка и&nbsp;не&nbsp;дает согласие на&nbsp;усыновление
                            .card__footer
                                .card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/father.jpg")
                            .card__body
                                h2.card__title Установление и&nbsp;оспаривание отцовства
                                ul.list
                                    li установление отцовства
                                    li оспаривание отцовства
                                    li отмена алиментов
                                    li установление отцовства после смерти отца
                            .card__footer
                                .card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/nasledstvo.jpg")
                            .card__body
                                h2.card__title Наследственные споры
                                ul.list
                                    li вступление в&nbsp;наследство после пропуска срока
                                    li оспаривание завещания
                                    li иные споры, вытекающие из наследственных отношений
                            .card__footer
                                .card__link Подробнее

                        a.card.service__item(href="#")
                            .card__img
                                img(src="img/jilishnie-spori.jpg")
                            .card__body
                                h2.card__title Жилищные споры
                                ul.list
                                    li вселение в&nbsp;квартиру
                                    li выселение из&nbsp;квартиры
                                    li определение порядка пользования квартирой
                                    li сопровождение сделок с&nbsp;недвижимостью
                            .card__footer
                                .card__link Подробнее




            aside.content__col.content__col_sm
                .add-block
                    h3.add-block__title Полезно знать
                    ul.article-list
                        li
                            a(href="#") Расторжение брака через суд
                        li
                            a(href="#") Раздел имущества супругов
                        li
                            a(href="#") Вызяскание алиментов
                        li
                            a(href="#") Споры о проживании детей
                        li
                            a(href="#") Выселение после развода
                        li
                            a(href="#") Лишение родительских прав
                        li
                            a(href="#") Установление/оспаривание отцовства
                        li
                            a(href="#") Бракоразводный процесс
                        li
                            a(href="#") Раздел ипотеки при разоде
                        li
                            a(href="#") Как взыскать алименты с безработного
                        li
                            a(href="#") Доказательства для установленря отцовства
                        li
                            a(href="#") Определение порядка встреч с ребенком
                        li
                            a(href="#") Признание брачного договора недействительным
                        li
                            a(href="#") Как завести речь о заключение брачного довогора
                        li
                            a(href="#") Консультация юриста по разводам
                        li
                            a(href="#") Оформление наследства после пропуска срока
    include inc/contact-block.html